#!/bin/sh
######################################  
# start tomcat - Prof Roumani - F 2018 
######################################
HOST=`hostname`
if [ "$HOST" = "red" -o "$HOST" = "indigo" ]; then
   echo "please login to a workstation"
   exit 1
fi
TOMCAT_DIR=$HOME/4413/pkg/tomcat
export CATALINA_HOME=$TOMCAT_DIR
$TOMCAT_DIR/bin/startup.sh allowLinking
