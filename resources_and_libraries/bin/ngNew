#!/bin/sh

###########################################################
# Written in F2019 by H. Roumani to create a minimal (350K)
# Angular Project (symlink the node modules library in fac) 
###########################################################

if [ Hi$1 == "Hi" ]
then
   echo "Usage: ngNew <projName>";
   exit 0;
fi


ng new $1 --skip-install --defaults=true
cd $1
ln -s /cs/fac/pkg/ngLib/node_modules node_modules

